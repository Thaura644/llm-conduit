{
    "appId": "com.aos.conduit",
    "productName": "Conduit",
    "directories": {
        "output": "dist"
    },
    "files": [
        "package.json",
        "electron/**/*",
        ".next/standalone/**/*",
        "public/**/*"
    ],
    "extraResources": [
        {
            "from": ".next/standalone",
            "to": "app/.next/standalone"
        }
    ],
    "win": {
        "target": "nsis",
        "icon": "public/icon.ico"
    },
    "mac": {
        "target": "dmg",
        "icon": "public/icon.icns",
        "category": "public.app-category.developer-tools"
    },
    "linux": {
        "target": [
            "AppImage",
            "deb"
        ],
        "icon": "public/icon.png",
        "category": "Development",
        "executableName": "conduit"
    },
    "deb": {
        "depends": [
            "libfuse2",
            "libnotify4",
            "libnss3",
            "libatk1.0-0",
            "libatk-bridge2.0-0",
            "libc6",
            "libgtk-3-0"
        ]
    },
    "publish": {
        "provider": "github",
        "owner": "Thaura644",
        "repo": "llm-conduit"
    }
}